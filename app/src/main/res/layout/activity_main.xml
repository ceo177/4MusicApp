<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a2f2f"
    android:orientation="vertical"
    tools:context="com.example.android.a4musicapp.MainActivity">

    <TextView
        android:id="@+id/txt_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/welcome_text"
        android:textAlignment="center"
        android:textColor="#48BF13"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/button_genres"
        android:text="POP"
        android:textColor="#48BF13"

        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_hiphop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/button_genres"
        android:text="Hip Hop"
        android:textColor="#48BF13"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_dance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/button_genres"
        android:text="DANCE"
        android:textColor="#48BF13"
        android:textSize="24sp" />

</LinearLayout>
